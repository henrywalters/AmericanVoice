<style>
	#scli {
		height: 50px;
		width: 500px;
	}
	#sql_results {
		height:500px;
		width:500px;
	}
</style>

<head>
<script>
	src="https://cdn.plot.ly/plotly-latest.min.js">
</script>

</head>
<h3>Hey <%= session[:user] %></h3>
<form method="post" id="form">
	<p>SQL command line</p>
	<dt><textarea name = "query" id="scli"></textarea></dt>
	<input type="submit" name="sql_query" id="sql_query" value="Submit SQL">
	<p>SQL results</p>
	<dt><textarea name="query_results" id="sql_results"><%=@sql_results%></textarea></dt>
</form> 


<div id="data_plot"></div>



<script>
	PLOT = document.getElementById('data_plot')
	plotly.plot( PLOT, [{
		x: <%= @dates %>,
		y: <%= @views %>
	}],
	{
		margin: {t: 0}
	}); 
</script>