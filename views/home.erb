<html>
<head>
</head>
    <style>
        header {
            border-bottom: 5px solid white;
            border-bottom-style: ridge;
            height: 45px;
        }
        h1 {
            display: inline-block;
            font-family:Helvetica;
            font-weight: bolder;
            margin: 0;
            padding: 0;
            line-height: 57px;
        }
        .form {
            margin: 0;
            padding: 0;
            float: right;
            display: inline-block;
            line-height: 62px;
        }
        #login{
            background-color: white;
            color: black;
            font-family: Helvetica;
            font-weight: bold;
            font-size: 20px;
            border: 1px solid #000000;
            transition-duration: 0.4s;
            -webkit-transition-duration: 0.4s;}
        #login:hover{
            background-color: #000000;
            color: white;
            border: 1px solid white;
        }    
        #register {
            background-color: white;
            color: black;
            font-family: Helvetica;
            font-weight: bold;
            font-size: 20px;
            border: 1px solid #000000;
            transition-duration: 0.6s;
            -webkit-transition-duration: 0.6s;
        }
        #register:hover {
            background-color: #000000;
            color: white;
            border: 1px solid white;
        }

    </style>
<body>
    <header>
        <h1>The American Voice</h1>
        <form class="form" method="post">
            <input name="search_query" type="text" id="search_query"><input name="search" type="submit" id="search">
            <input name="login" type="submit" value="Login" id="login">
            <input name="register" type="submit" value="Register" id="register">
        </form>
    </header>
    <% for i in 0...@links_on_page[@page.to_i].length %>
        <p>
            <%= @types_on_page[@page.to_i][i].capitalize %> Post: <a href=<%=@links_on_page[@page.to_i][i]%>><%=@titles_on_page[@page.to_i][i]%></a>
        </p>
    <% end %>

    <u1 class="pagination">
    <% for i in (0...@pages.to_i) %>
        <li><a href=<%="?page=#{i.to_s}"%>><%=(i+1).to_s%></a></li>
    <% end %> 
    </u1>
</body>

</html>